.header1 {
    background-color: #f5f5f5;
}

.header2 {
    background-color: #ffffff;
}

.header {
    width: 100%;
    height: 80rpx;
    border-bottom: 1rpx solid #d6d6d6;
}

.header .header_con {
    width: 700rpx;
    height: 80rpx;
    margin: 0 auto;
    color: #333;
    font-size: 30rpx;
}

.header .header_con image {
    width: 44rpx;
    height: 44rpx;
}

.header .header_con .right {
    color: #ff4965;
}

.bottom {
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #d6d6d6;
    background-color: #fff;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
}

.bottom .left {
    margin-left: 25rpx;
}

.bottom .left .select_none {
    width: 36rpx;
    height: 36rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 100%;
}

.bottom .right .all {
    color: #ff830f;
    font-size: 26rpx;
}

.bottom .right .gray {
    color: #666666;
    font-size: 22rpx;
}

.bottom .right .sure {
    margin-right: 22rpx;
    width: 256rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background-color: #ff4965;
    color: #fff;
    font-size: 31rpx;
    border-radius: 15rpx;
}

.onlinechoose {
    width: 750rpx;
    margin-top: 15rpx;
    background-color: #ffffff;
    font-size: 32rpx;
}

.onlinechoose .hotel_list {
    width: 750rpx;
    height: 260rpx;
    background-color: #ffffff;
}

icon {
    width: 36rpx;
    height: 36rpx;
}

.onlinechoose .hotel_list .icon_none {
    width: 36rpx;
    height: 36rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 50%;
}

.onlinechoose .hotel_list .list_cons {
    width: 700rpx;
    height: 205rpx;
}

.onlinechoose .list_cons .lefts {
    width: 80rpx;
}

.onlinechoose .list_cons image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 25rpx;
    border-radius: 15rpx;
}

.list_cons .right {
    width: 395rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.list_cons .right .name {
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 28rpx;
}

.list_cons .right .list1 {
    margin-bottom: 17rpx;
}

.list_cons .right .list1 .condition1 {
    font-size: 28rpx;
    color: #999999;
    margin-bottom: 15rpx;
}

.list_cons .right .list1 .condition2 {
    font-size: 24rpx;
    color: #999999;
}

.list_cons .right .list1 .act {
    color: #2d8622;
}

.list_cons .right .list1 .r {
    font-size: 24rpx;
    color: #ff4965;
}

.list_cons .right .list1 .big {
    font-size: 32rpx;
}

.list_cons .right .lists2 {
    height: 36rpx;
    line-height: 36rpx;
    font-size: 22rpx;
}

.list_cons .right .lists2 .left {
    width: 162rpx;
    text-align: center;
    color: #ff4965;
    border: 1rpx solid #ff4965;
    box-sizing: border-box;
    border-radius: 5rpx;
}

.list_cons .right .lists2 .right2 {
    color: #999999;
}

.flex_center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.flex_between {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex_start {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.flex_end {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.shanying {
    width: 100%;
    height: 85rpx;
    text-align: right;
    padding: 0 18rpx;
    box-sizing: border-box;
    display: flex;
    background: #ff8207;
    align-items: center;
    justify-content: flex-end;
}

.shanying text {
    width: 110rpx;
    height: 56rpx;
    border: 2rpx solid #fff;
    border-radius: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 34rpx;
}

.sahngf_view {
    width: 63%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.sahngf_view::before {
    content: "";
    width: 100%;
    position: absolute;
    bottom: -20rpx;
    height: 0;
    border-top: 2rpx solid #ebebeb;
}

.sahngf_text {
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 28rpx;
}

.sahngf_jia {
    width: 100%;
    height: 168rpx;
    display: flex;
    flex-direction: row;
    padding-top: 23rpx;
    box-sizing: border-box;
}

.sahngf_tree {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 49%;
}

.sahngf_trety {
    display: flex;
    align-items: center;
}

.sahngf_trety text:first-child {
    color: #313131;
    font-size: 30rpx;
    padding-right: 5rpx;
    text-decoration: none;
}

.sahngf_trety text {
    text-decoration: line-through;
    color: #a9a9a9;
    font-size: 25rpx;
}

.sahngf_five {
    font-size: 28rpx;
    color: #000;
}

.sahngf_fore {
    width: 112rpx;
    height: 50rpx;
    border: 2rpx solid #000;
    border-radius: 15rpx;
    overflow: hidden;
    display: flex;
}

.sahngf_fore text {
    width: 60%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    font-size: 25rpx;
    overflow: hidden;
}

.sahngf_fore text:first-child {
    width: 45%;
    border-right: 2rpx solid #000;
    border-radius: 15rpx;
    background: #ffd05c;
}

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    background: none;
    line-height: normal;
}

.sahngf_six {
    width: 50%;
    height: 86%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 0;
    box-sizing: border-box;
    border-left: 2rpx solid #efefef;
    flex-direction: column;
}

.button-hover {
    background-color: none;
}

button::after {
    content: none;
}

.sahngf_six image {
    width: 55rpx;
    height: 55rpx;
}

.sahngf_six text {
    font-size: 30rpx;
    color: #000;
}