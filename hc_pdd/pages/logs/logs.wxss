page {
    background: #f2f2f2;
    width: 100%;
    height: 100%;
}

.body {
    width: 100%;
    height: 100%;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    padding-top: 91px;
}

.xiaoxi {
    width: 100%;
    margin-bottom: 43rpx;
    display: flex;
    justify-content: space-between;
}

.xiaoxi_img {
    width: 70rpx;
    height: 70rpx;
    border-radius: 100%;
}

.ziding {
    width: 85%;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
}

.ziding_two {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    padding: 22rpx;
    box-sizing: border-box;
}

.ziding_two text {
    color: #adadad;
    font-size: 24rpx;
}

.ziding_two text:first-child {
    color: #383838;
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.dahhv {
    width: 100%;
    padding: 22rpx;
    box-sizing: border-box;
}

.dahhv text {
    color: #585858;
    font-size: 28rpx;
    display: block;
    word-wrap: break-word;
    word-break: break-all;
    width: 100%;
    line-height: 34rpx;
}

.ziding::before {
    content: "\200b";
    width: 0;
    height: 0;
    position: absolute;
    top: 30rpx;
    left: -20rpx;
    border-top: 20rpx solid transparent;
    border-right: 25rpx solid #ffffff;
    border-bottom: 20rpx solid transparent;
}

.ytyrti {
    width: 100%;
    padding: 10rpx;
    box-sizing: border-box;
}

.ytyrti image {
    width: 100%;
    height: 255rpx;
}

.chuos {
    width: 100%;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #585858;
    font-size: 27rpx;
}

.border {
    border-bottom: 2rpx solid #e2e2e2;
}