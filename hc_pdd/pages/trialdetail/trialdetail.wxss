page {
    width: 100%;
    height: 100%;
}

.main {
    width: 100%;
    height: 100%;
}

.banner {
    width: 100%;
    height: 750rpx;
    display: block;
}

.banner_view {
    padding: 39rpx 30rpx;
    box-sizing: border-box;
}

.moudab {
    color: #2f2f2f;
    font-size: 30rpx;
    line-height: 35rpx;
}

.mainds {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.mainds text {
    color: #7e7e7e;
    font-size: 23rpx;
    margin-top: 56rpx;
}

.mainds text:first-child {
    color: #ea4d46;
    font-size: 45rpx;
}

.zuai {
    width: 100%;
    height: 110rpx;
    border-top: 2rpx solid #e9e9e9;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.zuai text {
    width: 95%;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    height: 80rpx;
    background: linear-gradient(to right,#ff8a08,#ff5800);
    font-size: 35rpx;
}