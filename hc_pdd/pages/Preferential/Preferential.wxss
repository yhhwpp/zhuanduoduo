.huyou {
    width: 90%;
    margin: 0 auto;
    margin-bottom: 30rpx;
}

page {
    padding-top: 78px;
    background: #f2f2f2;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.huiimg {
    width: 100%;
    height: 277rpx;
    display: block;
}

.imfga {
    width: 100%;
    height: 100rpx;
    padding: 8rpx 12rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
}

.imfga_one {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.wivgha {
    width: 155rpx;
    height: 57rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50rpx;
    font-size: 28rpx;
    color: #fff;
    background: linear-gradient(to right,#ff4293,#ff8063);
}

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    background: none;
    line-height: normal;
}

button::after {
    content: none;
}

.button-hover {
    background-color: none;
}

.imfga_one text {
    font-size: 25rpx;
    color: #bcbcbc;
}

.imfga_one text:first-child {
    color: #000;
}