.lisyua {
    width: 100%;
    height: 70rpx;
    display: flex;
    margin-top: 72px;
    background: #e8e7e7;
}

.lisyua text {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #7d7d7d;
    font-size: 28rpx;
    width: 20%;
}

.lisyua .chanm {
    width: 40%;
}

.liay {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #e9e9e9;
}

.liay text {
    font-size: 28rpx;
    width: 20%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #707070;
}

.caa {
    width: 40%;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.caa image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 15rpx;
}

.liay .caa text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 188rpx;
    font-size: 28rpx;
    color: #707070;
}

.liay .num {
    color: #fc6410;
}

.liay .mogu {
    color: #d30f19;
}

.lisyua .boya {
    position: relative;
}

.lisyua .boya::before {
    content: "";
    width: 0;
    height: 60%;
    top: 20%;
    position: absolute;
    left: 0;
    border-left: 1rpx solid #706d6c;
}