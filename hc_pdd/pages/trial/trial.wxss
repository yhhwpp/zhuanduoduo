page {
    width: 100%;
    height: 100%;
    padding-top: 74px;
    box-sizing: border-box;
}

.main {
    width: 100%;
    height: 100%;
}

.title {
    display: flex;
    width: 100%;
    padding: 0 32rpx;
    align-items: center;
    box-sizing: border-box;
    margin-bottom: 29rpx;
}

.title_left {
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
    padding-right: 20rpx;
    border-right: 2rpx solid #e3e3e3;
}

.title_left text {
    padding: 5rpx 15rpx;
    background: #ea3033;
    border-radius: 15rpx;
    color: #fff;
    font-size: 22rpx;
}

.title_left text:first-child {
    color: #333333;
    font-size: 27rpx;
    padding: 0;
    background: none;
}

.meizhuan {
    width: 100%;
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
}

.meizhuan_one {
    width: 100%;
    display: flex;
    align-items: center;
}

.meizhuan_onetitle {
    padding: 5rpx;
    border: 2rpx solid #eb393c;
    color: #eb393c;
    font-size: 18rpx;
    margin: 0 15rpx;
    border-radius: 10rpx;
}

.gaoa {
    width: 88%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #666666;
    font-size: 25rpx;
    overflow: hidden;
}

.ayuuidj {
    height: 15rpx;
    width: 100%;
    background: #f4f4f4;
    box-shadow: -5px 5px 5px #eae8e8 inset;
}

.souimg {
    width: 100%;
    height: 298rpx;
    display: flex;
}

.heuan_view {
    width: 100%;
    padding: 0 18rpx;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 30rpx 0;
}

.heuan {
    width: 30%;
    border-radius: 15rpx;
    overflow: hidden;
    box-shadow: 0px 1px 7px #d2d1d1;
}

.heuan image {
    height: 227rpx;
    width: 100%;
    display: flex;
}

.xinudf {
    height: 108rpx;
    width: 100%;
    padding: 17rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.xinudf text {
    color: #ea0303;
    font-size: 27rpx;
}

.xinudf text:first-child {
    color: #333333;
    font-size: 25rpx;
    overflow: hidden;
    width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.kuab {
    position: relative;
    margin-bottom: 280rpx;
}

.kuab .heuan_view {
    position: absolute;
    top: 161rpx;
    left: 0;
}

.kuab .heuan {
    overflow: visible;
    border-radius: 0;
    box-shadow: none;
}

.kuab .heuan image {
    height: 281rpx;
}

.kuab .xinudf {
    align-items: center;
}

.statusBarHeight text {
    font-size: 33rpx;
    color: #000;
    margin-left: 35%;
}

.kuab .xinudf text {
    color: #ea0303;
    font-size: 27rpx;
    text-align: center;
}

.buttonum text {
    font-size: 35rpx;
}