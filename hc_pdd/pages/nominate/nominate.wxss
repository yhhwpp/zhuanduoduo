page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    padding-top: 72px;
    position: relative;
}

.nav {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 72px;
    left: 0;
    z-index: 99;
    padding-bottom: 20rpx;
}

.tab_box_view {
    padding-top: 100rpx;
    box-sizing: border-box;
    position: relative;
    height: 100%;
}

.tab-content {
    height: 100%;
    width: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
}

.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
    position: relative;
}

.nav-item::before {
    content: '';
    border-right: 2rpx solid #fff;
    position: absolute;
    top: 20%;
    right: 0;
    height: 60%;
    width: 0;
}

.nav-item.active {
    color: red;
    line-height: 0;
}

.tab-box {
    height: 100%;
    width: 100%;
    overflow: hidden;
    position: absolute;
    z-index: 0;
}

.word {
    color: #ffffff;
    font-size: 30rpx;
    display: block;
    line-height: 30rpx;
    text-align: center;
}

.word_word {
    color: #ffffff;
    font-size: 22rpx;
    line-height: 43rpx;
    margin: 10rpx auto 0;
    display: block;
    width: 116rpx;
    text-align: center;
}

.word_tw {
    background: #fff;
    color: #e60012;
    border-radius: 30rpx;
}

.scoll-h {
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    width: 100%;
}

.beiji {
    width: 100%;
    position: relative;
    margin-bottom: 31rpx;
}

.beiji_back {
    width: 100%;
    height: 210rpx;
    border-bottom-left-radius: 40%;
    border-bottom-right-radius: 40%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.beiji image {
    width: 94%;
    height: 260rpx;
    display: block;
    margin: 0 auto;
}

.beiji_view {
    width: 94%;
    margin: 0 auto 24rpx;
    background: #fff;
}

.beiji_viewlist {
    width: 100%;
    height: 242rpx;
    display: flex;
}

.beiji_viewlist_imges {
    width: 241rpx;
    height: 100%;
    position: relative;
    border-radius: 20rpx;
    overflow: hidden;
}

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    background: none;
    line-height: normal;
}

button::after {
    content: none;
}

.beiji_viewlist_imges image {
    width: 100%;
    height: 100%;
}

.beiji_viewlist_imges button {
    height: 50rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
    background: #d61609;
    position: absolute;
    bottom: 23rpx;
    padding: 0 14rpx;
    box-sizing: border-box;
    right: 0;
    z-index: 1;
}

.beiji_viewlist_imges button image {
    width: 23rpx;
    height: 31rpx;
}

.beiji_viewlist_imges button text {
    color: #ffffff;
    font-size: 22rpx;
    margin-left: 30rpx;
}

.beiji_viewlist_bottom {
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 16rpx 0 18rpx 0;
    box-sizing: border-box;
    margin-left: 30rpx;
}

.beiji_viewlist_bottomtext {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    color: #000000;
    font-size: 28rpx;
    line-height: 35rpx;
}

.beiji_viewlist_bottomtext image {
    width: 25rpx;
    height: 25rpx;
    display: inline-block;
    border-radius: 6rpx;
}

.beiji_viewlist_sommole {
    color: #808080;
    font-size: 24rpx;
    text-decoration: line-through;
    margin-left: 12rpx;
}

.beiji_viewlist_price {
    margin-top: auto;
}

.beiji_viewlist_sommol {
    color: #ee1512;
    font-size: 24rpx;
    display: inline-block;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.beiji_viewlist_sommol text {
    color: #ee1512;
    font-size: 48rpx;
    text-decoration: none;
}

.beiji_viewlist_zbotm {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.beiji_viewlist_zbotmyua {
    color: #808080;
    font-size: 24rpx;
}

.beiji_viewlist_zuan {
    width: 137rpx;
    height: 40rpx;
    position: relative;
}

.beiji_viewlist_zuan image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.beiji_viewlist_zuantxt {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    justify-content: space-between;
    padding: 0 13rpx;
    box-sizing: border-box;
}

.beiji_viewlist_zuantxt text {
    color: #ffffff;
    font-size: 24rpx;
}

.kuan {
    width: 100%;
    overflow: hidden;
    height: 100%;
}

::-webkit-scrollbar {
    display: none;
}