.shaunaf {
    width: 100%;
    border-radius: 15rpx;
    background: #fff;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.shaunaf_list {
    width: 100%;
    padding: 16rpx 0;
    box-sizing: border-box;
    display: flex;
    position: relative;
    height: 184rpx;
    border-bottom: 2rpx solid #efefef;
    align-items: center;
    justify-content: space-between;
}

.sahngf_view {
    width: 279rpx;
    height: 100%;
    position: relative;
    display: flex;
    padding: 10rpx 0;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: space-between;
}

.sahngf_text {
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #343434;
    font-size: 23rpx;
}

.sahngf_trety {
    display: flex;
    align-items: center;
}

.sahngf_trety text {
    text-decoration: line-through;
    color: #a9a9a9;
    font-size: 25rpx;
}

.sahngf_trety text:first-child {
    color: #313131;
    font-size: 36rpx;
    padding-right: 5rpx;
    text-decoration: none;
}

.sahngf_five {
    font-size: 21rpx;
    color: #2c2c2c;
    width: 100%;
    text-align: left;
}

.relatve_img {
    width: 148rpx;
    height: 148rpx;
    border-radius: 15rpx;
}

.sahngf_view::before {
    width: 0;
    content: "";
    height: 92rpx;
    border: 2rpx solid #f4f4f4;
    position: absolute;
    right: 0;
    top: 30rpx;
}

.sahngf_button {
    width: 180rpx;
    height: 73rpx;
    position: relative;
}

.sahngf_button image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.sahngf_texat {
    position: absolute;
    bottom: 15rpx;
    left: 29rpx;
}

.sahngf_texat text {
    color: #ffffff;
    font-size: 19rpx;
}

.sahngf_texat text:first-child {
    font-size: 38rpx;
}

