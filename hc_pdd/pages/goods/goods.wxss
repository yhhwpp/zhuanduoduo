}

.banjia {
    font-size: 28rpx;
    color: #303030;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.view_bantwo {
    width: 100%;
    display: flex;
    flex-direction: row;
}

.yushou {
    width: 49%;
    height: 100%;
