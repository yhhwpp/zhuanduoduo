.product {
    width: 100%;
    height: 190rpx;
    padding: 14rpx 25rpx;
    align-items: center;
    box-sizing: border-box;
    justify-content: space-between;
    display: flex;
}

.product_img {
    width: 165rpx;
    height: 165rpx;
    border-radius: 10rpx;
}

.view_ban {
