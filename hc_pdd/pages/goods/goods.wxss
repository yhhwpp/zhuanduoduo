@import "../batten/batten.wxss";

page {
    background: #f2f2f2;
    width: 100%;
    height: 100%;
}

.whole {
    width: 100%;
    height: 77rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box;
    position: fixed;
    z-index: 2;
    top: 127px;
}

.whole text {
    color: #383838;
    height: 100%;
    font-size: 25rpx;
    display: flex;
    align-items: center;
}

.whole .border {
    position: relative;
}

.whole .border::before {
    content: '';
    position: absolute;
    bottom: -2rpx;
    left: 0;
    width: 100%;
    height: 2rpx;
    background: #383838;
}

.myself {
    margin-top: 165px;
    background: #fff;
}

.myselft {
    margin-top: 170px;
    background: #fff;
}

.qitac {
    width: 231rpx;
    height: 360rpx;
    margin: 0 auto;
    display: block;
    margin-top: 100rpx;
}

.myself_one {
    width: 100%;
    padding: 0 30rpx;
    height: 103rpx;
    display: flex;
    box-sizing: border-box;
    align-items: center;
    position: relative;
    border-bottom: 2rpx solid #eeeeee;
}

.abch {
    width: 100%;
    height: 54rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 25rpx;
    box-sizing: border-box;
}

.abch text {
    font-size: 28rpx;
    color: #999;
}

.abch text:first-child {
    color: #000;
}

.usover {
    width: 77rpx;
    height: 77rpx;
    border-radius: 100%;
}

.wodfgvs {
    height: 77rpx;
    display: flex;
    margin-left: 20rpx;
    flex-direction: column;
    justify-content: space-between;
}

.wodfgvs text {
    font-size: 22rpx;
    color: #9c9c9c;
}

.wodfgvs text:first-child {
