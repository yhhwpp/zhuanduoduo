page {
    width: 100%;
    background: #fff;
    height: 100%;
}

.ties {
    width: 100%;
    height: 88rpx;
    padding: 0 55rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    margin-top: 72px;
}

.ties text {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2f2f2f;
    font-size: 30rpx;
    box-sizing: border-box;
    border-bottom: 4rpx solid #fff;
}

.content_tw {
    color: #2f2f2f;
    font-size: 32rpx;
}

.wxParse-inline {
    color: #2f2f2f!important;
    font-size: 30rpx!important;
}

.ties .ties_text {
    color: #ff8a08;
    border-bottom: 4rpx solid #ff8a08;
}

.none {
    display: none;
}

.gesu {
    height: 14rpx;
    width: 100%;
    background: #f4f4f4;
}

.ties_main {
    width: 100%;
}

.ties_main_list {
    width: 100%;
    padding: 25rpx;
    box-sizing: border-box;
    display: flex;
}

.ties_main_list_img {
    width: 88rpx;
    height: 88rpx;
    border-radius: 15rpx;
}

.ties_main_listright {
    width: 87%;
    margin-left: 20rpx;
}

.right_title {
    height: 88rpx;
    padding: 10rpx 0;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.right_title text {
    color: #b6b6b6;
    font-size: 21rpx;
}

.right_title text:first-child {
    color: #2f2f2f;
    font-size: 30rpx;
}

.yury {
    display: flex;
    flex-direction: column;
}

.content {
    color: #313131;
    font-size: 32rpx;
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.content_blue {
    color: #6a6f96;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.tuinhg,.yuia {
    width: 100%;
    display: flex;
    margin-top: 28rpx;
    flex-wrap: wrap;
}

.yuia {
    justify-content: space-between;
}

.tuinhg image {
    width: 180rpx;
    height: 180rpx;
    margin: 5rpx;
}

.sahyudfa {
    font-size: 30rpx;
}

.Earnestmoney {
    height: 55rpx;
    display: flex;
    align-items: center;
}

.Earnestmoney image {
    width: 37rpx;
    height: 37rpx;
}

.Earnestmoney text {
    margin-left: 10rpx;
    color: #ff8b08;
    font-size: 25rpx;
    line-height: 37rpx;
}

.Earnestmoney_tr {
    width: 190rpx;
    height: 53rpx;
    border-radius: 10rpx;
    background: linear-gradient(to right,#ff8908,#ff5700);
    display: flex;
    align-items: center;
    justify-content: center;
}

.Earnestmoney_tr image {
    width: 38rpx;
    height: 38rpx;
}

.Earnestmoney_tr text {
    color: #fff;
    font-size: 27rpx;
    margin-left: 10rpx;
}

.qusian {
    width: 100%;
    height: 70rpx;
    background: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
}

.qusian image {
    width: 50rpx;
    height: 50rpx;
}

.qusian text {
    font-size: 28rpx;
    margin-left: 20rpx;
}