page {
    width: 100%;
    height: 100%;
    background: #000;
}

.main {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.zhignjia {
    width: 502rpx;
    height: 588rpx;
    position: relative;
}

.zhignjia_img {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.zhignjia_view {
    width: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    z-index: 1;
    justify-content: space-between;
    height: 117rpx;
    bottom: 175rpx;
    flex-direction: column;
}

.zhignjia_viewtcx {
    width: 122rpx;
    display: flex;
    align-items: center;
}

.zhignjia_viewtcx image {
    width: 43rpx;
    height: 43rpx;
    border-radius: 100%;
}

.zhignjia_viewtcx text {
    font-size: 20rpx;
    width: 70rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #fff;
    margin-left: 20rpx;
}

.songni {
    color: #fff;
    font-size: 30rpx;
}

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    background: none;
    line-height: normal;
}

button::after {
    content: none;
}

.sayuaj {
    width: 100%;
    height: 932rpx;
    position: absolute;
    top: 14%;
    left: 0;
}

.ad {
    width: 100%;
    height: 264rpx;
    display: block;
    position: fixed;
    bottom: 0;
    left: 0;
}